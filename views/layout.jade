    body
    div(class='header')
          block header
            h1(class='header-text') CHILDREN'S LIBRARY
            h4 Knowledge to Wisdom
    div(class='container-fluid')
      div(class='row')
        div(class='col-sm-2')
          block sidebar
             ul(class='sidebar-nav')
              h3 CONTENTS
              li
                a(href='/catalog' class=(activePage==='home'? 'active':'sidebar-link')) Home
              li
                a(href='/catalog/books' class=(activePage==='book_list'? 'active':'sidebar-link')) All books
              li
                a(href='/catalog/students' class=(activePage==='student_list'? 'active':'sidebar-link')) All students
              li
                a(href='/catalog/student/create' class=(activePage==='new_student'? 'active':'sidebar-link')) Create new student
              li
                a(href='/catalog/book/create' class=(activePage==='new_book'? 'active':'sidebar-link')) Create new book

        
        div(class='col-sm-10')
            block content
