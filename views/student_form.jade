extends layout 

block content 
    h1=title 

    form(method='POST' action='')
        div.form-group
            label(for='id') ID: 
            input#id.form-control(type='text' placeholder='ID' name='id' required='true')
            label(for='name') Name: 
            input#id.form-control(type='text' placeholder='Name of the student' name='name' required='true')
        button.btn.btn-primary(type='submit') Submit
if errors   
    ul 
        for error in errors 
            li!= error.msg
