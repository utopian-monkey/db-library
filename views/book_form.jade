extends layout 

block content 
    h1=title 

    form(method='POST' action='')
        div.form-group
            label(for='id') ID: 
            input#title.form-control(type=text, placeholder ='ID of Book' name='id' required=true )
        div.form-group
            label(for='name') Name: 
            input#title.form-control(type=text, placeholder ='Name of Book' name='name' required=true )
    
        button.btn.btn-primary(type='submit') Submit
if errors 
    ul 
        for error in errors 
            li! = error.msg 

            